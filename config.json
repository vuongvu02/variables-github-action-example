{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "transforms": ["name/camel"],
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/module"
        }
      ]
    }
  }
}
